{% extends 'base.html.twig' %}

{% block title %}Modifier le mot de passe{% endblock %}

{% block body %}
<section id="form-page" class="dfull">
    <section id="form-container" class="dfull">
        <div>
            <img src="{{ asset('img/password.jpg') }}" alt="Image sécurisée pour modification de mot de passe">
        </div>

        <div id="form" class="dfull fdc">
            {{ form_start(form, {'attr': {'class': 'dfull fdc'}}) }}
                <h2>Modifier votre mot de passe</h2>

                <div class="form-group">
                    {{ form_label(form.actualPassword) }}
                    {{ form_widget(form.actualPassword, {'attr': {'placeholder': 'Ancien mot de passe', 'class': 'form-control'}}) }}
                    {{ form_errors(form.actualPassword) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.newPassword) }}
                    {{ form_widget(form.newPassword, {'attr': {'placeholder': 'Nouveau mot de passe', 'class': 'form-control'}}) }}
                    {{ form_errors(form.newPassword) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.confirmNewPassword) }}
                    {{ form_widget(form.confirmNewPassword, {'attr': {'placeholder': 'Confirmer le mot de passe', 'class': 'form-control'}}) }}
                    {{ form_errors(form.confirmNewPassword) }}
                </div>

                <button type="submit" class="submit-button">Valider</button>
            {{ form_end(form) }}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
        </div>
    </section>
</section>
{% endblock %}
